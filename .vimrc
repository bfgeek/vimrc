" General
set nocompatible
filetype plugin indent on

" Colour!
set background=dark
syntax on

" UI Crap
set ruler
set backspace=indent,eol,start
colorscheme desert

" Visual
set showmatch
set hlsearch

" Formatting
set ai
set si
set cindent
set tabstop=2
set softtabstop=2
set shiftwidth=2
set nowrap
set expandtab

" Font
set guifont=Monospace\ 9
